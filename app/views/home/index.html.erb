<div id="search-panel">
<%= form_tag action: "search" do %>
  <input id="search_field" name="search_field" type="text"/>
  <button type="submit" class="btn">Search</button>
<% end %>
</div>
<div id="search-results-panel">
  <div id="search-results-menu">

  </div>
  <div id="search-results">
  <% if @result_model %>
    <% if @result_model.has_errors %>
      <% @result_model.errors.each do |error| %>
        <%= error %>
      <% end %>
    <% else %>
        <% @result_model.model.each do |tool| %>
            <%= tool.name %>
        <% end %>
    <% end %>
  <% end %>
  </div>
</div>