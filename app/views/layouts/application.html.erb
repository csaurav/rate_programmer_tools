<html>
<head>
  <title>RateProgrammerTools</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <div id="content-top">
    <a href="/"><img src="/images/logo_home.png"/></a>
    <div class='auth_links'>
      <% if  @current_user %>
      <div class="btn-group">
        <a class="btn btn-primary" href="<%= show_user_path(@current_user) %>"><i class="icon-user icon-white"></i><%= " #{@current_user.username}" %></a>
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="<%= show_user_path(@current_user) %>"><i class="icon-list-alt"></i> Profile</a></li>
          <li><a href="<%= edit_user_path %>"><i class="icon-pencil"></i> Settings</a></li>
          <li class="divider"></li>
          <li><a href="<%= logout_path %>"><i class="icon-off"></i> Logout</a></li>
        </ul>
      </div>
      <% else %>
      <%=  link_to 'Log In', login_path, {class: 'btn'} %>    
      <%=  link_to 'Sign Up', signup_path, {class: 'btn'} %>    
      <% end %>
    </div>
    <div class="clear_float"></div>
  </div>
  <div id="content-bottom">
    <%= render partial: "shared/flash_messages", flash: flash %>
    <%= yield %>
  </div>

  <div class="footer">
    <hr>
    <p>&copy; RateProgrammerTools 2012</p>
  </div>

</body>
</html>
