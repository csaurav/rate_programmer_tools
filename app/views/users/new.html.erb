<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
<fieldset>   
  <legend>Registration</legend>   
  <% errors = @user.errors %>
  <%= create_field_with_errors f,'email', "Whatâ€™s your email address?", errors %>
  <%= create_field_with_errors f,'username', "Enter a username at least 5 characters long. 
                    It can only include letters, numbers and underscores", errors %>
  <%= create_field_with_errors f,'first_name', "This field is optional", errors%>
  <%= create_field_with_errors f,'last_name', "This field is optional",errors %>
  <%= create_field_with_errors f,'password', "Enter a password atleast 6 characters long",errors %>
  <%= create_field_with_errors f,'password_confirmation', "Please confirm your password",errors %>
  <%= create_control_div nil,"By clicking register you agree to our #{link_to 'Terms of Service','/TOS'}"  %>
  <%= create_control_div nil, f.submit("Register", class: 'btn btn-success') %>
</fieldset>
<% end %>
